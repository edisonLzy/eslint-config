{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "pnpm",
  "ignore": "features/**",
  "ignoreChanges": ["features/**", ".husky/**", "**/*.log","**/*.md"],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "conventionalCommits": true,
      "message": "chore(release): publish %v"
    }
  }
}
